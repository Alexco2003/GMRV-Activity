<Window x:Class="PAJV_L3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAJV_L3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBoxUsername" HorizontalAlignment="Center" Margin="0,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="249,169,0,0" VerticalAlignment="Top" Width="68" Height="28"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="249,217,0,0" VerticalAlignment="Top" Width="68" Height="28"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="394,282,0,0" VerticalAlignment="Top" Height="30" Width="66" Click="Login"/>
        <Button x:Name="startGameButton" Content="Start Game" HorizontalAlignment="Left" Margin="394,332,0,0" VerticalAlignment="Top" Height="30" Width="66" Click="startGame"/>
        <TextBlock x:Name="loginStatus" HorizontalAlignment="Left" Margin="486,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="291"/>
        <TextBlock x:Name="gameStatus" HorizontalAlignment="Left" Margin="486,334,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="291"/>

    </Grid>
</Window>
